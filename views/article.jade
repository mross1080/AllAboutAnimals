extends layout

block content
  ol(class="breadcrumb")
    li
      a(href="/") Home
    li
      a(href="/articlelist") Article
  .row
    .col-md-4
      h1
        | #{article.title}
    img(class="col-xs-4 col-sm-4 col-md-4 col-md-offset-3 img-thumbnail " src= "#{article.imgsrc}")
  p
    | "#{article.paragraph1}"
  p
    | "#{article.paragraph2}""
  a(href= "#{article.source}")
    | Source: #{article.source} 